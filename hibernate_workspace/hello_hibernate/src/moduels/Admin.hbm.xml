<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="moduels.Admin" table="t_admin">
        <id name="id" type="int" >
            <generator class="native" />
        </id>
        <property name="name"/>

        <!-- 配置多对多的属性-->
        <set name="roles" table="t_admin_role" >
            <key column="admins_id"/>
            <many-to-many class="moduels.Role" column="roles_id"/>
        </set>
    </class>



</hibernate-mapping>

